<div class="row">
  <%if session[:role]=="admin"%>
    <div class="col-lg-3" style="width: 280px;height: 84vh;">
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-light h-100" style="width: 280px;margin-top:-0.rem;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
          <span class="fs-4">Admin Dashboard</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <%=link_to "Users",users_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "City",cities_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "Brands",brands_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "Model",car_models_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "Appointment",root_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "Car Condition",set_car_condition_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "Branches",branches_path , class:"nav-link link-dark hover-effect"%>
          </li>
          <li>
            <%=link_to "Branch Details",branch_path(@branch), class:"nav-link active hover-effect"%>
          </li>
        </ul>
        <hr>
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle me-2">
            <strong><%=current_user.name%></strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser2">
            <li><%=link_to "Profile",user_path(session[:user_id]),class:"dropdown-item"%></li>
            <li><%=link_to "Update Info",edit_user_path(session[:user_id]),class:"dropdown-item"%></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= button_to "Logout", session_path(session[:user_id]), class: "dropdown-item", method: :delete %></li>
          </ul>
        </div>
      </div>
    </div>
  <%end%>
  <div class="col-lg-4 ms-4">
    <div class="row">
      <div class="col-md-5 mt-3">
        <label class="mb-3 h6">Branch details</label>
        <div class="list-container" style="height: 400px;">
          <table class="table table-striped table-hover">
            <tbody>
              <tr>
                <th>Name</th>
                <td class="h6"><%=@branch.name%></td>
              </tr>
              <tr>
                <th>City</th>
                <td ><%=@city.name%></td>
              </tr>
              <tr>
                <th>State</th>
                <td ><%=@city.state%></td>
              </tr>
              <tr>
                <th>Detail Address</th>
                <td ><%=@branch.address%></td>
              </tr>
               <tr>
                <th>Map Link</th>
                <td > <a href="<%=@branch.map_link%>" target="blank"><%=@branch.map_link%></a> </td>
              </tr>
              <tr>
                <th>Latitude</th>
                <td ><%=@branch.latitude%></td>
              </tr>
              <tr>
                <th>Longitude</th>
                <td ><%=@branch.longitude%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4 mt-3">
      <div class="row">
        <div class="h6 text-center mb-3">Branch Location on map</div>
        <div class="mapouter">
          <div class="gmap_canvas">
            <iframe width="80%" height="400px" id="gmap_canvas" src="https://maps.google.com/maps?q=<%= @branch.latitude %>,<%= @branch.longitude %>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            <style>.mapouter{position:relative;text-align:right;height:100%;width:100%;}</style>
            <style>.gmap_canvas {overflow:hidden;background:none!important;height:100%;width:100%;}</style>
          </div>
        </div>
      </div>
  </div>
</div>
