<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-10">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                    <%= image_tag @car.image ,class:"card-img-top pt-2 img-fluid"%>
                  <a href="#!">
                    <div class="hover-overlay">
                      <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                    </div>
                  </a>
                </div>
              </div>
              <div class="col-md-6 col-lg-6 col-xl-6">
                <div class="table-responsive">
                  <table class="table table-bordered">
                    <tbody>
                      <tr>
                        <td class="text-dark h6">Brand</td>
                        <td class="text-dark"><%=@car.brand.name%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Model</td>
                        <td class="text-dark"><%= @car.car_model.name%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Reg No</td>
                        <td class="text-dark"><%= @car.reg_no%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Variant</td>
                        <td class="text-dark"><%= @car.variant%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Kilometer Driven</td>
                        <td class="text-dark"><%= @car.kilometer_driven%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Reg Year</td>
                        <td class="text-dark"><%= @car.reg_year %></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Reg State</td>
                        <td class="text-dark"><%= @car.reg_state%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Price</td>
                        <td class="text-dark"><%= @car.price.present? ? @car.price: "yet to update"%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Condition</td>
                        <td class="text-dark"><%= @car.condition.present? ? @car.condition: "yet to update"%></td>
                      </tr>
                      <tr>
                        <td class="text-dark h6">Location</td>
                        <td class="text-dark"><%= @car.branch.name %><br><%= @car.branch.city.name %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                <div class="d-flex flex-row align-items-center mb-1">
                  <h4 class="mb-1 me-1"> Price : &#8377; <%= @car.price.present? ? @car.price: "yet to update" %></h4>
                </div>
                <h6 class="text-success"> Condition : <%= @car.condition.present? ? @car.condition: "yet to update by admin" %> </h6>
                <div class="d-flex flex-column mt-4">
                  <% if session[:role] == 'admin' %>
                    <button type="button" class="btn btn-success flex-fill myModalBtn" data-car-id="<%= @car.id %>">Verify</button>
                  <%end%>
                  <a class="btn btn-outline-primary btn-sm mt-2" href="/branch_details/<%=@car.branch.id%>" target="_blank" type="button">Branch Info</a>
                  <span style="font-size:12px;" class="mt-2"> ~condition is according to second wheel's standard </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render partial: 'price_set_modal' %>
