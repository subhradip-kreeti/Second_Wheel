<div class="d-flex flex-column flex-grow-1 p-3 bg-light" style="width: 280px;height: 84vh;">
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
    <span class="fs-4">Admin Dashboard</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <%=link_to "Users",show_all_users_path , class:"hover-effect nav-link link-dark #{"active" if (@active_window=="users")}" %>
    </li>
    <li>
      <%=link_to "City",show_city_path , class:"hover-effect nav-link link-dark #{"active" if (@active_window=="city")}" %>
    </li>
    <li>
      <%=link_to "Brands",show_brand_path, class:"hover-effect nav-link link-dark #{"active" if (@active_window=="brands")}"%>
    </li>
    <li>
      <%=link_to "Model",show_car_model_path , class:"hover-effect nav-link link-dark #{"active" if (@active_window=="model")}" %>
    </li>
    <li>
      <%=link_to "Appointment",appointments_verification_path , class:"hover-effect nav-link link-dark #{"active" if (@active_window=="appointment")}" %>
    </li>
    <li>
      <%=link_to "Set Price",set_car_condition_path , class:"hover-effect nav-link link-dark #{"active" if (@active_window=="car-condition")}" %>
    </li>
    <li>
      <%=link_to "Branches",branches_path , class:"hover-effect nav-link link-dark #{"active" if (@active_window=="branches")}"%>
    </li>
  </ul>
