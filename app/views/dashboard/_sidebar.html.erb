  <div class="dropdown">
    <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
      <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle me-2">
      <strong><%=current_user.name%></strong>
    </a>
    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser2">
      <li><%=link_to "Profile",my_profile_user_path(session[:user_id]),class:"dropdown-item"%></li>
      <li><%=link_to "Update Info",edit_my_profile_user_path(session[:user_id]),class:"dropdown-item"%></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= button_to "Logout", logout_path, class: "dropdown-item", method: :delete %></li>
    </ul>
  </div>
