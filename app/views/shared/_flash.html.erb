<div class="container-fluid flash">
  <% flash.each do |type, msg| %>
  <div class="alert alert-<%=type%> text-center" id="flash" role="alert">
    <strong> <%= msg %> </strong>
  </div>
  <script>
    function remove_flash(){
      $(document).ready(function(){
        setTimeout(function(){

          $('#flash').fadeOut();
        }, 3000);
      })
    }
    remove_flash()
  </script>
  <% end %>
</div>
