<label class="mb-3 h6">List of already available Branches</label>
<div class="list-container" style="height: 500px;">
  <div class="list-content">
    <ul class="list-group" id="model-list">
      <% @branch.each do |branch| %>
      <% city_name = City.find_by(id: branch.city_id) %>
        <div class="d-flex row list-group-item">
          <div class="col-sm-7"> <li class=""><%= branch.name %> ( <%= city_name.name %> )</div>
          <div class="col-sm-3 d-flex">
            <a class="btn btn-primary" href="branches/<%= branch.id %>" role="button" target="_blank">Details</a>
            <% if session[:role] == 'admin'%>
              <a class="btn btn-info ms-2" href="branches/<%= branch.id %>/edit" role="button">Edit</a>
              <a class="btn btn-danger ms-2" href="branches/<%= branch.id %>" role="button" data-method="delete" data-confirm="Are you sure you want to delete this branch?">Delete</a>
            <%end%>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
   </div>
</div>
