<%if @render_template == true%>
  <%= form_with(model: @user, url: edit_my_profile_user_path) do |form| %>
    <section class="vh-70 mt-5">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Your Info</p>
                    <form class="mx-1 mx-md-4">
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= form.label :email, class: "form-label", for: "form3Example3c" %>
                          <%= form.email_field :email, id: "form3Example3c", class: "form-control" %>
                        </div>
                      </div>
                          <%@user.errors.full_messages_for(:email).each do |message|%>
                          <p class="text-danger"> <%=message%> </p>
                          <%end%>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= form.label :Mobile, class: "form-label", for: "form3Example3c" %>
                          <%= form.text_field :mobile_no, id: "form3Example3c", class: "form-control"%>
                        </div>
                      </div>
                        <%@user.errors.full_messages_for(:mobile_no).each do |message|%>
                          <p class="text-danger"> <%=message%> </p>
                        <%end%>
                      <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <%= form.submit 'Update', class: "btn btn-primary btn-lg" %>
                      </div>
                    </form>
                  </div>
                  <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<%end%>
