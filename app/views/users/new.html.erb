<%= form_with(model: @user, url: users_path) do |form| %>
  <section class="vh-70 mt-4">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-2 mx-1 mx-md-4 mt-2">Sign up</p>

                  <form class="mx-1 mx-md-4">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= form.label :name, class: "form-label", for: "form3Example1c" %>
                        <%= form.text_field :name, id: "form3Example1c", class: "form-control" %>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= form.label :email, class: "form-label", for: "form3Example3c" %>
                        <%= form.email_field :email, id: "form3Example3c", class: "form-control" %>
                      </div>
                    </div>
          <%@user.errors.full_messages_for(:email).each do |message|%>
            <p class="text-danger"> <%=message%> </p>
          <%end%>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= form.label :password, class: "form-label", for: "form3Example4c" %>
                        <%= form.password_field :password, id: "form3Example4c", class: "form-control" %>
                      </div>
                    </div>
          <%@user.errors.full_messages_for(:password).each do |message|%>
            <p class="text-danger"> <%=message%> </p>
          <%end%>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-users fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= form.label :Mobile, class: "form-label", for: "role" %>
                        <%= form.text_field :mobile_no, id: "form3Example5c", class: "form-control",placeholder:"10 digit indian mobile number(without country code)"%>
                      </div>
                    </div>
          <%@user.errors.full_messages_for(:mobile_no).each do |message|%>
            <p class="text-danger"> <%=message%> </p>
          <%end%>

           <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-users fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= form.label :role, class: "form-label", for: "role" %>
                        <%= form.select :role, ['buyer', 'seller'], { prompt: "Select role" }, class: "form-select" %>
                      </div>
                    </div>
          <%@user.errors.full_messages_for(:role).each do |message|%>
            <p class="text-danger"> <%=message%> </p>
          <%end%>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= form.submit 'Sign Up', class: "btn btn-primary btn-lg" %>
                    </div>
                  </form>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 flex-column">

                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
                  <p> Already an User? login at  <%= link_to  "Login", login_path %> </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
